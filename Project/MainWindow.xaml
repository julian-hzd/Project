<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="940">
    <Grid  x:Name="grContent">


        <Grid.Background>
            <!--"-->
            <ImageBrush Stretch="Fill" ImageSource="/Images/snowman.jpg" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".2*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*" />
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="78*"/>
        </Grid.ColumnDefinitions>



        <!--Title-->
        <StackPanel Grid.Column="3" Grid.ColumnSpan="2" Margin="86,0,0,303" HorizontalAlignment="Left" Grid.RowSpan="2">
            <TextBlock Foreground="MintCream" Text="Inventory Tracker" FontSize="32" FontWeight="Bold" />
        </StackPanel>



        <!--Load Save-->
        <Button Foreground="LightCoral" Click="Save_Click" Grid.Column="5" Grid.Row="2" Height="25" Width="70" Content="Save" Background="Azure" BorderBrush="Azure" Margin="63,17,63,18"/>
        <Button Foreground="Crimson" Click="Load_Click" Grid.Column="4" Grid.Row="2" Height="25" Width="70" Content="Load" Background="Azure" BorderBrush="Azure" Margin="63,17,63,18"/>

        <!--Clear-->
        <Button Foreground="Crimson" Click="Clear_Click" Grid.Column="4" Grid.Row="2"  Height="20"  Width="70" FontWeight="Bold" Content="Clear" Background="Azure" BorderBrush="Azure" VerticalAlignment="Center" Margin="63,0,63,0"/>


        <!--Add-->
        <Button Click="Add_Click" Content="Add"  Height="20" Width="70" Foreground="Crimson" Background="Azure" BorderBrush="Azure" Grid.Row="2" Grid.Column="2" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <!--Delete, Edit-->
        <Button  Click="Dlt_Click" Grid.Column="5" Grid.Row="2" Foreground="Crimson" Background="Azure" BorderBrush="Azure" Content="Delete" FontWeight="Bold" Height="20" Width="70" Margin="63,20,63,20"/>
        <Button  Click="EditClick" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center"  Foreground="Crimson" Background="Azure" BorderBrush="Azure" FontWeight="Bold" Content="Edit" Height="20" Width="70" Margin="63,0,63,0"/>

        <!--Increase, Decrease-->
        <Button  Click="QtyIncrease_Click" Grid.Column="0" Grid.Row="2" Content="Increase Qty" FontWeight="Bold" VerticalAlignment="Center"  Height="20" Width="90" Foreground="LightCoral" Background="Azure" BorderBrush="Azure" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="12,0,4,0" />
        <Button  Click="QtyDecrease_Click" Grid.Column="5" Grid.Row="2" Content="Decrease Qty" FontWeight="Bold" VerticalAlignment="Center"  Height="20" Width="90" Foreground="LightCoral" Background="Azure" BorderBrush="Azure" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="4,0,12,0" />

        <!--Item display  darkgrey darkorchid seaGREEN darkstlateblue slategray, dimgray gainsboro ghostwhite-->
        <ListBox x:Name="lbItems" BorderBrush="Black" Background="DarkGray" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="6"   Margin="17,25,78,60" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.RowSpan="2" >
            <ListBox.ItemTemplate>
                <DataTemplate>

                    <WrapPanel Margin="30,2,0,0">
                        <TextBlock Grid.Column="2" Grid.Row="1"  Text="Item Name: " FontSize="14" Foreground="Black" FontWeight="Bold"  />
                        <TextBlock Text="{ Binding  ItemName }" FontSize="14" Foreground="Aqua" />
                        <TextBlock Margin="20,0,0,0"/>

                        <TextBlock Text="| Available Quantity: " Grid.Column="4"  Grid.Row="1" FontSize="14" Foreground="Black" FontWeight="Bold"  />
                        <TextBlock Text="{Binding  AvailableItemQty}" FontSize="14" Foreground="Turquoise"/>
                        <TextBlock Margin="20,0,0,0"/>

                        <TextBlock Text="| Minimum Quantity: " Grid.Column="4"  Grid.Row="1" FontSize="14" Foreground="Black" FontWeight="Bold"  />
                        <TextBlock Text="{Binding  MinItemQty}" FontSize="14" Foreground="Turquoise"/>
                        <TextBlock Margin="20,0,0,0"/>
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


    </Grid>
</Window>