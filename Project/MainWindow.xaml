<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="940">
    <Grid  x:Name="grContent">


        <Grid.Background>
            <!--"-->
            <ImageBrush Stretch="Fill" ImageSource="/Images/snowman.jpg" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height=".1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".2*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="78*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0"  Background="LightSlateGray">
            <MenuItem Header="File" Foreground="Purple" BorderBrush="Purple">
                
            </MenuItem>
        </Menu>


        <!--Title-->
        <StackPanel Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" Margin="86,0,0,303" HorizontalAlignment="Left" Grid.RowSpan="2">
            <TextBlock Foreground="MintCream" Text="Inventory Tracker" FontSize="32" FontWeight="Bold" />
        </StackPanel>


        <!--Clear-->
        <Button Click="Clear_Click" Content="Clear"  BorderBrush="Purple" Height="20" Width="70" Foreground="Purple" Background="LightSlateGray"  Grid.Row="3" Grid.Column="4" FontWeight="Bold" Margin="45,20,0,20"/>


        <!--Add-->
        <Button Click="Add_Click" Content="Add"  BorderBrush="Purple" Height="20" Width="70" Foreground="Purple" Background="LightSlateGray"  Grid.Row="3" Grid.Column="2" FontWeight="Bold" Margin="45,20,0,20"/>

        <!--Delete, Edit-->
        <Button  Click="Dlt_Click" Grid.Column="5"  Grid.Row="3" Foreground="Purple" Background="LightSlateGray"  BorderBrush="Purple" Content="Delete" FontWeight="Bold" Height="20" Width="70" Margin="63,20,63,20"/>
        <Button  Click="EditClick" Grid.Column="3" Grid.Row="3" VerticalAlignment="Center"  Foreground="Purple" Background="LightSlateGray"  BorderBrush="Purple" FontWeight="Bold" Content="Edit" Height="20" Width="70" Margin="63,0,63,0"/>

        <!--Increase, Decrease-->
        <Button  Click="QtyIncrease_Click" Grid.Column="0" Grid.Row="3" Content="Increase Qty" FontWeight="Bold" VerticalAlignment="Center"  Height="20" Width="90" Foreground="Purple" Background="LightSlateGray"  BorderBrush="Purple" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="5,0,0,0" />
        <Button  Click="QtyDecrease_Click" Grid.Column="5" Grid.Row="3" Content="Decrease Qty" FontWeight="Bold" VerticalAlignment="Center"  Height="20" Width="90" Foreground="Purple" Background="LightSlateGray"  BorderBrush="Purple" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="4,0,12,0" />

        <!--Item display  darkgrey darkstlateblue slategray, dimgray gainsboro ghostwhite-->
        <ListBox x:Name="lbItems" BorderBrush="Black" Background="LightSlateGray" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="6"   Margin="17,25,78,60" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.RowSpan="2" >
            <ListBox.ItemTemplate>
                <DataTemplate>

                    <WrapPanel Margin="30,2,0,0">
                        <TextBlock Grid.Column="2" Grid.Row="1"  Text="Item Name: " FontSize="14" Foreground="DarkBlue" FontWeight="Bold"  />
                        <TextBlock Text="{ Binding  ItemName }" FontSize="14" Foreground="Beige" />
                        <TextBlock Margin="20,0,0,0"/>

                        <TextBlock Text="| Available Quantity: " Grid.Column="4"  Grid.Row="1" FontSize="14" Foreground="DarkBlue" FontWeight="Bold"  />
                        <TextBlock Text="{Binding  AvailableItemQty}" FontSize="14" Foreground="Beige"/>
                        <TextBlock Margin="20,0,0,0"/>

                        <TextBlock Text="| Minimum Quantity: " Grid.Column="4"  Grid.Row="1" FontSize="14" Foreground="DarkBlue" FontWeight="Bold"  />
                        <TextBlock Text="{Binding  MinItemQty}" FontSize="14" Foreground="Beige"/>
                        <TextBlock Margin="20,0,0,0"/>
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


    </Grid>
</Window>