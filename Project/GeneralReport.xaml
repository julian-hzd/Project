<Window x:Class="Project.GeneralReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="GeneralReport" Height="450" Width="600" Background="LightSlateGray">

    <DataGrid Height="auto" HorizontalAlignment="Left" Margin="12,21,12,0" 
              Name="McDataGrid" VerticalAlignment="Top" Width="550"
              GridLinesVisibility="Vertical" HeadersVisibility="All" 
              Background="LightGray" RowBackground="Thistle" AlternatingRowBackground="Beige" 
              BorderBrush="Gray" BorderThickness="5"
              IsReadOnly="True"  VerticalScrollBarVisibility="Visible"  />
</Window>
